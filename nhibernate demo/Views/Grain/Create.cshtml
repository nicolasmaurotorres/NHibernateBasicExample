@model nhibernate_demo.Models.Grain
           

@{
    ViewBag.Title = "Create";
}

<div class="center">
    <h2>Create Grain</h2>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.tag.editor-min.js")" type="text/javascript"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $("#features").tagEditor();
    });
    </script>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>

            <div class="row">
                <div id="div-name" class="col-md-4">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Name)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div id="div-farmer" class="col-md-4">
                    <div class="editor-label">
                        <label>Farmer</label> 
                    </div>
                    <div class="editor-field farmer-select">
                        @Html.EditorFor(model => model.Farmer)
                    </div>

                </div>
                
                <div id="div-features" class="col-md-4">
                    <div class="editor-label">
                        <label>Features</label>
                    </div>
                    <div class="editor-field">
                        @Html.TextBox("features", "", new { id = "features" })
                    </div>
                </div>
            </div>

            <hr class="hr-center" />
            <p>
                <input class="btn btn-default no-decoration" type="submit" value="Create" />
                <a class="btn btn-default no-decoration" href="/Grain">Back to List</a>
            </p>
        </fieldset>
    }

    <div class="hide">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        document.getElementsByTagName("input")[0].setAttribute("required", "required");
    })
</script>
